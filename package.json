{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:demo": "npm --prefix apps/demo-monsterpedia run build",
    "build:mesh": "npm --prefix apps/mesh-monsterpedia run build",
    "dev:demo": "npm --prefix apps/demo-monsterpedia run dev",
    "dev:mesh": "npm --prefix apps/mesh-monsterpedia run dev",
    "dev": "npm --prefix apps/demo-monsterpedia run verify-env && run-p dev:*"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
